{
  "name": "assignment-monorepo",
  "version": "1.0.0",
  "description": "Full-stack chat application monorepo",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "generate": "turbo run generate",
    "db:generate": "npm run generate --workspace=@assignment/db",
    "db:push": "npm run db:push --workspace=@assignment/db",
    "db:migrate": "npm run db:migrate --workspace=@assignment/db",
    "db:studio": "npm run db:studio --workspace=@assignment/db",
    "backend:dev": "npm run dev --workspace=backend",
    "ws:dev": "npm run dev --workspace=ws",
    "frontend:dev": "npm run dev --workspace=frontend"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
